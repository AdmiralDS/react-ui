{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "noEmit": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "#src/*": ["./*"],
      "@admiral-ds/react-ui": ["./index"]
    },

    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin"
      }
    ]
  },
  "include": ["src/**/*", ".jest/**/*", "node_modules/@admiral-ds/flags/**/*"],
  "exclude": ["dist", "**/__snapshots__/*"]
}
