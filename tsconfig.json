{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "#src/*": ["./*"],
      "@admiral-ds/react-ui": ["./index"]
    },
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "lint": {
          "validProperties": ["container-type"],
          "unknownAtRules": "ignore"
        }
      }
    ]
  },
  "include": ["src/**/*", ".storybook"],
  "exclude": ["dist", "**/node_modules/*", "docs", "**/__snapshots__/*"]
}
