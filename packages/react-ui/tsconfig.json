{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "types": ["@types/jest", "@testing-library/dom", "@testing-library/react", "@types/testing-library__jest-dom"],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "#src/*": ["./*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }]
  },
  "include": ["./src"],
  "exclude": ["./scripts"]
}
