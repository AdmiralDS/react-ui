{
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "target": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "#src/*": ["./*"],
      "@admiral-ds/date-picker": ["./index"]
    },
    "types": ["@types/jest"]
  },
  "include": ["./src"],
  "exclude": ["dist", "**/node_modules/*"],
  
  "references": [
    {
      "path":"../react-ui"
    }
   
  ]
}
